{
  "info": {
    "name": "QuackPlan API with Authentication",
    "description": "Complete event planning and booking system API with user registration, login, and role-based access control",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string",
      "description": "JWT token for authentication"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the API is running and healthy"
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "    pm.collectionVariables.set('userId', response.user._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.customer@example.com\",\n  \"password\": \"Password123\",\n  \"userType\": \"customer\",\n  \"profile\": {\n    \"fullName\": \"John Customer\",\n    \"phone\": \"+1234567890\",\n    \"location\": \"New York, NY\",\n    \"dob\": \"1990-01-01\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new customer account"
          }
        },
        {
          "name": "Register Vendor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('vendorToken', response.token);",
                  "    pm.collectionVariables.set('vendorId', response.user._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"melissa.peters@soccergym.com\",\n  \"password\": \"SecurePass123\",\n  \"userType\": \"vendor\",\n  \"profile\": {\n    \"fullName\": \"Melissa Peters\",\n    \"phone\": \"+1 (305) 555-0188\",\n    \"location\": \"Miami, Florida – Downtown Sports Center\",\n    \"dob\": \"1995-05-23\",\n    \"academyName\": \"Soccer Academy\",\n    \"specializations\": [\"Soccer Academy\", \"Soccer Training\", \"Swimming Classes\"],\n    \"businessAddress\": \"Downtown Sports Center, Miami, FL\",\n    \"businessPhone\": \"+1 (305) 555-0188\",\n    \"bio\": \"Professional soccer trainer with 8+ years of experience\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new vendor account with the sample data from the attachment"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "    pm.collectionVariables.set('currentUserId', response.user._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"melissa.peters@soccergym.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with email and password"
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get current user's profile information"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"profile\": {\n    \"bio\": \"Updated professional soccer trainer with 10+ years of experience\",\n    \"location\": \"Miami, Florida – Premium Sports Center\",\n    \"rating\": 4.8\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            },
            "description": "Update user profile information"
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"SecurePass123\",\n  \"newPassword\": \"NewSecurePass456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "change-password"]
            },
            "description": "Change user password"
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-token"]
            },
            "description": "Verify if current token is valid"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout (client should remove token)"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users?userType=vendor&verificationStatus=verified&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"],
              "query": [
                {
                  "key": "userType",
                  "value": "vendor",
                  "description": "Filter by user type (vendor/customer)"
                },
                {
                  "key": "verificationStatus",
                  "value": "verified",
                  "description": "Filter vendors by verification status"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search in names and academy names",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            },
            "description": "Browse users publicly (no auth required)"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{vendorId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{vendorId}}"]
            },
            "description": "Get public profile of a user"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/events?status=published&visibility=public&tags=soccer,training&startDate=2025-09-01&endDate=2025-12-31&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events"],
              "query": [
                {
                  "key": "status",
                  "value": "published"
                },
                {
                  "key": "visibility",
                  "value": "public"
                },
                {
                  "key": "tags",
                  "value": "soccer,training"
                },
                {
                  "key": "startDate",
                  "value": "2025-09-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Text search",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            },
            "description": "Browse events publicly (no auth required)"
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events", "{{eventId}}"]
            },
            "description": "Get event details"
          }
        },
        {
          "name": "Create Event (Vendor Only)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('eventId', response._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Advanced Soccer Training Session\",\n  \"description\": \"Intensive soccer training focusing on dribbling, passing, and shooting techniques. Suitable for intermediate to advanced players.\",\n  \"location\": \"Downtown Sports Center, Miami, FL\",\n  \"startsAt\": \"2025-09-15T18:00:00Z\",\n  \"endsAt\": \"2025-09-15T20:00:00Z\",\n  \"capacity\": 15,\n  \"priceCents\": 4500,\n  \"visibility\": \"public\",\n  \"status\": \"published\",\n  \"tags\": [\"soccer\", \"training\", \"advanced\", \"skills\"],\n  \"coverUrl\": \"https://example.com/soccer-training.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/events",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events"]
            },
            "description": "Create a new event (requires vendor authentication)"
          }
        },
        {
          "name": "Update Event (Owner Only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Advanced Soccer Training Session\",\n  \"description\": \"Updated intensive soccer training with new techniques\",\n  \"capacity\": 20,\n  \"priceCents\": 5000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events", "{{eventId}}"]
            },
            "description": "Update event (only the vendor who created it)"
          }
        },
        {
          "name": "Delete Event (Owner Only)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events", "{{eventId}}"]
            },
            "description": "Delete event (only the vendor who created it)"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/bookings?status=confirmed&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"],
              "query": [
                {
                  "key": "status",
                  "value": "confirmed",
                  "description": "Filter by booking status"
                },
                {
                  "key": "eventId",
                  "value": "",
                  "description": "Filter by specific event",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            },
            "description": "Get authenticated user's bookings"
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{bookingId}}"]
            },
            "description": "Get specific booking details"
          }
        },
        {
          "name": "Book Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('bookingId', response._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{eventId}}\",\n  \"paymentRef\": \"payment-stripe-ch_abc123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings"]
            },
            "description": "Book an event (uses authenticated user's ID)"
          }
        },
        {
          "name": "Update Booking Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"checked_in\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{bookingId}}"]
            },
            "description": "Update booking status"
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"byUserId\": \"{{currentUserId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{bookingId}}"]
            },
            "description": "Cancel booking (promotes waitlisted users)"
          }
        }
      ]
    },
    {
      "name": "Personal Events",
      "item": [
        {
          "name": "Get My Personal Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/personal-events?userId={{currentUserId}}&startDate=2025-09-01&endDate=2025-12-31&limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personal-events"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{currentUserId}}"
                },
                {
                  "key": "startDate",
                  "value": "2025-09-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            },
            "description": "Get user's personal calendar events"
          }
        },
        {
          "name": "Create Personal Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{currentUserId}}\",\n  \"title\": \"Personal Training Session\",\n  \"startsAt\": \"2025-09-20T16:00:00Z\",\n  \"endsAt\": \"2025-09-20T17:00:00Z\",\n  \"notes\": \"One-on-one training session with focus on ball control\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/personal-events",
              "host": ["{{baseUrl}}"],
              "path": ["api", "personal-events"]
            },
            "description": "Create a personal calendar event"
          }
        }
      ]
    }
  ]
}
